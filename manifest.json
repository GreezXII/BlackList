{
  "manifest_version": 2,
  "name": "BlackList",
  "version": "1.0",

  "description": "Черный список",
  "icons": {
    "48": "icons/x-mark.png"
  },

  "applications": {
    "gecko": {
      "id": "borderify@mozilla.org",
      "strict_min_version": "45.0"
    }
  },
  
  "background": {
    "scripts": [
      "background/background.js"
    ]
  },

  "message_display_action": {
    "default_title": "Черный список",
    "default_icon" : "icons/x-mark.png",
    "default_popup": "popup/popup.html"
  },

  "permissions": [
    "messagesRead"
  ]
}